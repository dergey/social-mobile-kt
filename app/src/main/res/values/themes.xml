<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Social" parent="Theme.AppCompat.Light">
        <!-- Windows background color. -->
        <item name="android:colorBackground">@color/background_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/shadow_primary_color</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Text color. -->
        <item name="textColorPrimary">@color/black</item>
        <item name="textColorSecond">@color/dark_gray</item>
        <item name="textColorBackground">@color/gray</item>
        <!-- Background color. -->
        <item name="backgroundColorBackground">@color/background_color</item>
        <item name="backgroundColorForeground">@color/foreground_color</item>
        <item name="shimmerBackgroundColor">@color/shimmer_background_color</item>

        <!-- Customize your theme here. -->
        <item name="backgroundErrorLayoutColor">@color/error</item>
        <item name="textErrorLayoutColor">@color/white</item>
        <item name="linkTextViewColor">@color/link_color</item>
        <item name="headerTextViewColor">@color/header_color</item>
        <item name="hintTextViewColor">@color/hint_color</item>
        <item name="borderEditTextColor">@color/border_color</item>
        <item name="borderFocusedEditTextColor">@color/focused_border_color</item>
        <item name="buttonTextColor">@color/button_text_color</item>
        <item name="backgroundButtonColor">@color/active_button_color</item>
        <item name="backgroundDisableButtonColor">@color/disable_button_color</item>
        <item name="backgroundPressedButtonColor">@color/pressed_active_button_color</item>
        <item name="friendColor">@color/green</item>

        <!-- Button colors -->
        <item name="primaryButtonBackgroundColor">@color/active_button_color</item>
        <item name="primaryDisableButtonBackgroundColor">@color/disable_button_color</item>
        <item name="primaryPressedButtonBackgroundColor">@color/pressed_active_button_color</item>
        <item name="dangerButtonBackgroundColor">@color/danger_button_background_color</item>
        <item name="dangerDisableButtonBackgroundColor">@color/danger_disable_button_background_color</item>
        <item name="dangerPressedButtonBackgroundColor">@color/danger_pressed_button_background_color</item>

        <!-- Clickable colors -->
        <item name="clickableTransparentSecondColor">@color/clickable_transparent_second_color</item>
    </style>

    <style name="Theme.Social.NoActionBar" parent="Theme.Social">
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Text styles: -->
    <style name="Chats" parent="@android:style/TextAppearance.Material">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>
    <style name="Chats.Time">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Chats.Header">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Chats.Body">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Chats.Counter">
        <item name="android:textColor">?attr/textColorBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Messages" parent="@android:style/TextAppearance.Material">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>
    <style name="Messages.Time">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/textColorSecond</item>
    </style>
    <style name="Messages.Time.Contrast">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>
    <style name="Messages.Body">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PopupError" parent="@android:style/TextAppearance.Material">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>
    <style name="PopupError.Body" parent="@android:style/TextAppearance.Material">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/textColorBackground</item>
    </style>
    <style name="PopupError.Button" parent="@android:style/TextAppearance.Material">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Profile" parent="@android:style/TextAppearance.Material">
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Profile.Header" parent="Profile">
            <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>
    <style name="Profile.Header2" parent="Profile.Header">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Profile.Header3" parent="Profile.Header">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Profile.Status" parent="Profile">
        <item name="android:textColor">?attr/textColorSecond</item>
    </style>
    <style name="Profile.Button" parent="Profile">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Profile.Counter">
        <item name="android:textColor">?attr/textColorBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Profile.Counter.OnError" parent="Profile.Counter">
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="Friend.Request.Status" parent="Profile">
        <item name="android:textColor">?attr/textColorBackground</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textSize">18sp</item>
    </style>
</resources>